{ 
	"manifest_version": 3,
	"name": "Hwacha",
	"version": "0.0.1",
	"description": "Another NationStates banscript option",
	"icons": { 
			"16": "icons/16.png",
			"48": "icons/48.png",
			"128": "icons/128.png"
	},

	"content_scripts": [{
		"matches": [
			"https://*.nationstates.net/*"
		],
		"js": [ 
			"src/apilib.js",
			"src/hwachalib.js",
			"src/controlpanel.js",
			"src/hwacha.js"
		]
	}],

	"host_permissions":[
		"https://*.nationstates.net/*"
	], 

	"permissions":[
		"cookies",
		"storage",
		"tabs"
	],

	"browser_specific_settings":{
		"gecko":{
				"id":"hwacha@alexfromnationstates",
				"strict_min_version": "109.0"
		}
	}
}


